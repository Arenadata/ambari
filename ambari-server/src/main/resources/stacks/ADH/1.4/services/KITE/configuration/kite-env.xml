<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

<configuration>

  <property>
    <name>kite_log_dir</name>
    <value>/var/log/kite</value>    
    <description>Kite Log dir</description>
  </property> 

 <property>
    <name>kite_pid_dir</name>
    <value>/var/run/kite</value>
    <description>Dir containing process ID file</description>
  </property>
  
 <property>
    <name>kite_home_dir</name>
    <value>/usr/lib/kite</value>
    <description>Kite home dir</description>
  </property>
  
  <property>
    <name>kite_user</name>
    <value>kite</value>
    <property-type>USER</property-type>
    <description>User kite daemon runs as</description>
  </property> 
        
  <property>
    <name>kite_group</name>
    <value>kite</value>
    <property-type>GROUP</property-type>
    <description>kite group</description>
  </property> 
                      
</configuration>
